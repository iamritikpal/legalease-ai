{
  "name": "legalease-ai",
  "version": "1.0.0",
  "description": "AI-powered legal document simplification using Google Cloud",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop legalease-ai",
    "restart:pm2": "pm2 restart legalease-ai",
    "logs:pm2": "pm2 logs legalease-ai",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": ["legal", "ai", "google-cloud", "document-processing"],
  "author": "LegalEase AI Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
